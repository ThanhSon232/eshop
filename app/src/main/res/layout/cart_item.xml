<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    android:id="@+id/card1"
    android:layout_height="wrap_content" android:layout_width="match_parent"
    app:cardCornerRadius="@dimen/_10sdp"
    app:cardElevation="0dp"
    android:backgroundTint="#Fdfcfa"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_130sdp"
        android:padding="@dimen/_10sdp">

        <CheckBox
            android:id="@+id/checkButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cart_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_toRightOf="@id/checkButton"
            app:cardCornerRadius="@dimen/_20sdp">

            <ImageView
                android:id="@+id/cart_image"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/sample1" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/cart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_toRightOf="@id/cart_card"
            android:text="Bàn Làm Việc Gỗ"
            android:textColor="@color/black"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cart_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cart_name"
            android:layout_marginLeft="@dimen/_13sdp"
            android:layout_toRightOf="@id/cart_card"
            android:text="147.650.000vnd"
            android:textColor="@color/gray"
            android:textSize="@dimen/_15sdp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/_10sdp"
            android:layout_width="100dp"
            android:layout_height="@dimen/_30sdp">
            <Button
                android:id="@+id/btn_less"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-" />

            <EditText
                android:id="@+id/et_number"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textAlignment="center"
                android:inputType="number"
                android:text="0" />

            <Button
                android:id="@+id/btn_more"
                android:layout_width="0sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+" />
        </LinearLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>
